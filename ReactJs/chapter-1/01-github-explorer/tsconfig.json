{
  "compilerOptions": {
    "lib": ["DOM","DOM.Iterable","ESNext"], 
    "allowJs": true, 
    "jsx": "react-jsx",   
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,           
    "moduleResolution": "node", 
    "resolveJsonModule": true,   
    "isolatedModules": true,      
    "noEmit": true,                 
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
